{
  "name": "F1-Manager",
  "version": "1.0.0",
  "description": "F1.royniels.nl",
  "main": "index.js",
  "watch": {
    "js": {
      "patterns": [
        "src"
      ],
      "extensions": "js"
    },
    "css": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    }
  },
  "scripts": {
    "css": "node_modules/.bin/minify --output public/css/styles.css src/css/styles.css",
    "js": "node_modules/.bin/browserify src/bootstrap/client.js --outfile public/js/main.min.js -t [ babelify --presets [ latest ] ] --ignore-missing --debug",
    "js-min": "node_modules/.bin/browserify src/bootstrap/client.js -t [ babelify --presets [ latest ] ] --ignore-missing | uglifyjs > public/js/main.min.js && rm -f public/js/main.js",
    "js-file-size": "node_modules/.bin/browserify src/bootstrap/client.js --outfile public/js/main.js -t [ babelify --presets [ latest ] ] --ignore-missing --list | xargs ls -la --sort=size",
    "certs": "rm -rf certs && mkdir certs && openssl req -newkey rsa:2048 -new -nodes -x509 -days 3650 -keyout certs/key.pem -out certs/cert.pem",
    "api": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=development node_modules/.bin/nodemon --harmony src/bootstrap/api.js",
    "serve": "NODE_TLS_REJECT_UNAUTHORIZED=0 NODE_ENV=development node_modules/.bin/nodemon --harmony src/bootstrap/webserver.js",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/braadworst/f1.royniels.nl.git"
  },
  "keywords": [
    "f1",
    "manager",
    "game!"
  ],
  "author": "Roy Niels",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/braadworst/f1.royniels.nl/issues"
  },
  "devDependencies": {
    "babel-polyfill": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "babelify": "^7.3.0",
    "browserify": "^14.0.0",
    "minifier": "^0.8.1",
    "npm-watch": "^0.1.8",
    "purecss": "^0.6.2",
    "uglify-js-harmony": "^2.7.5"
  },
  "homepage": "https://github.com/braadworst/f1.royniels.nl#readme",
  "dependencies": {
    "cheerio": "^0.22.0",
    "cs-router": "^1.0.2",
    "is-my-json-valid": "^2.16.0",
    "lodash": "^4.17.4",
    "minilog": "^3.1.0",
    "spdy": "^3.4.4",
    "sqlite3": "^3.1.8",
    "superagent": "^3.5.0",
    "uuid": "^3.0.1"
  }
}
